<Window x:Class="DataGrid.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Height="461" Width="612" WindowStartupLocation="CenterScreen" AllowsTransparency="True"
        Background="Transparent" WindowStyle="None">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Border CornerRadius="30" Background="#EFF2F7" MouseDown="Border_MouseDown">
        <Grid x:Name="productEdit">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="306"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Separator Height="1" Background="Black" Margin="0,68,0,2" Grid.ColumnSpan="2"/>

            <Button Style="{StaticResource topButton}" Margin="251,20,0,20" Click="exitButton_Click" Grid.Column="1" HorizontalAlignment="Left">
                <Icon:PackIconMaterial Kind="ExitToApp"/>
            </Button>

            <Button Style="{StaticResource addButton}" Click="saveButton_Click" Margin="0,325,63,31" Grid.Row="1" Width="90" Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Save All" FontFamily="Times New Roman"/>
                </StackPanel>
            </Button>

            <StackPanel Margin="0,45,0,276" Grid.Row="1">
                <TextBlock Text="Product name" Foreground="Black" FontFamily="Times New Roman" Width="270" TextAlignment="Left" FontSize="14" Margin="5"/>
                <TextBox Name="nameTextBox" Width="270" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,45,0,276" Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Product price" Foreground="Black" FontFamily="Times New Roman" Width="270" TextAlignment="Left" FontSize="14" Margin="5"/>
                <TextBox Name="priceTextBox" Width="270" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,143,0,178" Grid.Row="1">
                <TextBlock Text="Producer" Foreground="Black" FontFamily="Times New Roman" Width="270" TextAlignment="Left" FontSize="14" Margin="5"/>
                <TextBox Name="producerTextBox" Width="270" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,143,0,178" Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Manufacture" Foreground="Black" FontFamily="Times New Roman" Width="270" TextAlignment="Left" FontSize="14" Margin="5"/>
                <TextBox Name="manufactureTextBox" Width="270" Height="30"/>
            </StackPanel>

            <Button Style="{StaticResource addButton}" Margin="0,249,272,107" Grid.Row="1" Width="68" Grid.ColumnSpan="2" Background="#FF006D65" FontFamily="Times New Roman" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Add image" FontFamily="Times New Roman"/>
                </StackPanel>
            </Button>

            <TextBlock Text="Update Product Infomation" FontFamily="Times New Roman" Margin="23,22,63,22" FontSize="20" Grid.ColumnSpan="2"/>
        </Grid>
    </Border>
</Window>
